@model IList<ElectionsIndia.Models.ViewModels.UsersNotInRolesViewModel>

@{
    ViewData["Title"] = "AddUsersToRoles";
}

<h4>Add/Remove Users To/From Roles</h4>

<form method="post">
    <table class="table table-striped">
        <thead>
            <tr>

                <th>

                </th>
                <th>
                    User Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>

                    <td>
                        <input type="checkbox" asp-for="@Model[i].IsInRole" class="form-check" />
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                    </td>
                    <td>
                        <label asp-for="@Model[i].UserName">@Model[i].UserName</label>
                    </td>

                </tr>
            }
        </tbody>

    </table>
    <button class="btn btn-primary" asp-action="AddUsersToRoles" type="submit">Update</button>
</form>