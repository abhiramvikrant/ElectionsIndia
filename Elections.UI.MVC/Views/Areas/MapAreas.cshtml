@model IList<AreaListCreateViewModel>
@{
    ViewData["Title"] = "Map Areas";
}
<a asp-action="MultipleAreas" asp-controller="Areas" asp-route-cityid="@ViewBag.CityId" asp-route-cityname="@ViewBag.CityName" class="btn btn-info">
    Add Multiple Areas
</a>
    <form method="post">
        <div class="container">
            @for (int i = 0; i < Model.Count; i++)
            {

                <div class="row">
                    <div class="form-check m-0 p-1">
                        @Html.HiddenFor(modelItem => @Model[i].CityId)
                        @Html.HiddenFor(modelItem => @Model[i].IsActive)
                        @Html.HiddenFor(modelItem => @Model[i].InitialCityId)
                        @Html.HiddenFor(modelItem => @Model[i].InitialCityName)
                        @Html.HiddenFor(modelItem => @Model[i].ElectionAreaId)
                        @Html.HiddenFor(modelItem => @Model[i].Name)

                        @Html.CheckBoxFor(modelItem => @Model[i].BelongsToCity)
                    </div>
                    <div class="col-md-3 text-left m-0 p-1">
                        <label asp-for="@Model[i].Name">@Model[i].Name</label>
                    </div>
                </div>
            }
            <br />
            <div class="row">
                <div>
                    <button type="submit" asp-action="MapAreas" asp-controller="areas" class="btn btn-info">
                        Update
                    </button>
                </div>
            </div>
        </div>
    </form>
