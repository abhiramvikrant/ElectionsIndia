@using ElectionsIndia.Models;
<link href=”//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css” rel=”stylesheet”>

@model IEnumerable<Languages>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-2"><label class="form-control-plaintext">@item.Name</label></div>
            <div class="col-md-1 ml-2"><a asp-controller="Languages" asp-action="Edit" asp-route-id=@item.LanguageId><span class="fa fa-pencil-alt" title="Edit"></span></a></div>
            @if (item.Name.ToLower() != "english")
            {
            <div class="col-md-1 ml-2">
                <a asp-controller="Languages" onclick="return confirm(' Are you sure you want to delete @item.Name');" asp-action="Delete" asp-route-id=@item.LanguageId ><span class="fa fa-trash" title="Delete"></span></a>
            </div>
            }
        </div>
        <br />
    }
</div>

