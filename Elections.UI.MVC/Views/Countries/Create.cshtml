@using ElectionsIndia.Models.ViewModels
@model CountryCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Add New Country in English</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Enter Country Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Select English Country Name: </label>
                <select asp-for="EnglishCountryID" class="form-control" asp-items="@(new SelectList(ViewBag.EnglishList,"CountryId","Name"))">
                <option value="">Select Country</option>
                    <option value="-1">Not Applicable</option>
                </select>
                <span asp-validation-for="EnglishCountryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Select Language Name</label>
                <select asp-for="LanguageId" class="form-control" asp-items="@(new SelectList(ViewBag.LangList,"LanguageId","Name"))"><option value="">Select Language</option></select>
                <span asp-validation-for="LanguageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
